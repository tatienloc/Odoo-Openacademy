<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="manage_class_view_list" model="ir.ui.view">
        <field name="name">manage_class.list</field>
        <field name="model">manage_class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="a_course"/>
                <field name="class_id"/>
            </tree>
        </field>
    </record>

    <record id="manage_class_view_form" model="ir.ui.view">
        <field name="name">manage_class.form</field>
        <field name="model">manage_class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                            <field name="a_course"/>
                            <field name="class_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="manage_class_action" model="ir.actions.act_window">
        <field name="name">manage_class</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">manage_class</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="manage_class_menu"
              parent="course_menu_root"
              name="manage class"
              action="manage_class_action"
              groups="group_courses_user,group_courses_manager"/>
</odoo>