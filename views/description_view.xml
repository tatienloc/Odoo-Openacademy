<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="description_view_list" model="ir.ui.view">
        <field name="name">Description.list</field>
        <field name="model">description</field>
        <field name="arch" type="xml">
            <tree>
                <field name="acourse"/>
                <field name="des"/>
            </tree>
        </field>
    </record>

     <record id="description_view_form" model="ir.ui.view">
        <field name="name">Discription.form</field>
        <field name="model">description</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="acourse"/>
                        <field name="des"/>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

    <record id="description_action" model="ir.actions.act_window">
        <field name="name">Description</field>
        <field name="res_model">description</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="description_menu"
              parent="course_menu_root"
              name="Description"
              action="description_action"
              groups="group_courses_user,group_courses_manager"/>
</odoo>